@model IEnumerable<CrudNet7MVC.Models.Contacto>

@{
    ViewData["Title"] = "Lista de contactos";
}

<h1 class="text-center">Contactos con .NET 7 (.NET Core MVC)</h1>

<div class="row">
    <div class="offset-10 col-2 mb-3">
        <a asp-action="Crear" asp-controller="Inicio" class="btn alert-secondary d-block mx-auto btn-lg">Nuevo usuario</a>
    </div>
</div>

<div class="row">
    <div class="offset-12">
        <div class="card border">

            <div class="card-header bg-dark">
                <h4 class="text-white"><strong>Lista de usuarios</strong></h4>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    @if(Model.Count() > 0) {
                        <table class="table-bordered" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                    <th>@Html.DisplayNameFor(m => m.Telefono)</th>
                                    <th>@Html.DisplayNameFor(m => m.Celular)</th>
                                    <th>@Html.DisplayNameFor(m => m.Email)</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach(var item in Model) {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                                        <td>@Html.DisplayFor(m => item.Telefono)</td>
                                        <td>@Html.DisplayFor(m => item.Celular)</td>
                                        <td>@Html.DisplayFor(m => item.Email)</td>
                                        <td>
                                            <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                                            <a class="btn btn-secondary" asp-action="Detalle" asp-route-id="@item.Id">Detalle</a>
                                            <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@item.Id">Borrar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    } else {
                        <p>No hay registros</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>